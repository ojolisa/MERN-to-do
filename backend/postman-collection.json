    {
      "name": "AI Features",
      "item": [
        {
          "name": "Get AI Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/{{userId}}/ai/summary",
              "host": ["{{baseUrl}}"],
              "path": ["{{userId}}", "ai", "summary"]
